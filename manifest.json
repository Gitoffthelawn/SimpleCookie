{
  "manifest_version": 2,
  "name": "SimpleCookie",
  "version": "3.0",
  "description": "A minimalist yet efficient cookie manager for Firefox",
  "author": "micka",
  "homepage_url": "https://github.com/mickaphd/SimpleCookie",
  "permissions": [
    "<all_urls>",
    "browsingData",
    "contextualIdentities",
    "cookies",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "settings.html"
  },
  "icons": {
    "48": "resources/48.png",
    "96": "resources/96.png"
  }
}